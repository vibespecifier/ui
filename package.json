{
  "name": "@vibespecifier/ui",
  "description": "Shared UI components designed for the VibeSpecifier project.",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "import": "./out/ui.js",
      "require": "./out/ui.cjs"
    },
    "./styles.css": "./out/ui.css"
  },
  "scripts": {
    "format": "prettier --write .",
    "review": "prettier --check . && oxlint && tsc --noEmit",
    "test": "vitest run",
    "build": "vite build && tsc --project tsconfig.dts.json",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-vitest": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@types/node": "^24.3.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "oxlint": "^1.14.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-sh": "^0.18.0",
    "sass": "^1.92.1",
    "storybook": "^9.1.5",
    "typescript": "^5.9.2",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
